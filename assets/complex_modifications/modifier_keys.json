{
  "title": "Modifier Keys",
  "rules": [{
      "description": "Modifier Keys Setup",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": [{
            "key_code": "fn"
          }],
          "to_if_alone": [{
            "key_code": "escape"
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_option"
          },
          "to": [{
            "key_code": "left_option"
          }],
          "to_if_alone": [{
            "pointing_button": "button1"
          }]
        }
      ]
    },
    {
      "description": "Shift Parens",
      "manipulators": [{
          "from": {
            "key_code": "left_shift"
          },
          "to": [{
            "key_code": "left_shift"
          }],
          "to_if_alone": [{
            "key_code": "9",
            "modifiers": "left_shift"
          }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift"
          },
          "to": [{
            "key_code": "right_shift"
          }],
          "to_if_alone": [{
            "key_code": "0",
            "modifiers": "right_shift"
          }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Input Sources Switcher (Poker)",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": "caps_lock"
            }
          },
          "to": [{
            "key_code": "caps_lock"
          }]
        }
      ]
    },
    {
      "description": "Input Sources Switcher (AIK)",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": "caps_lock"
            }
          },
          "to": [{
            "key_code": "caps_lock"
          }]
        }
      ]
    }
  ]
}
