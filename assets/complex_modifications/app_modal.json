{
  "title": "Per-App Modal HotKeys",
  "rules": [{
      "description": "Misc Apps",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": {
              "mandatory": "left_command"
            }
          },
          "to": [{
            "shell_command": "open 'hammerspoon://reload'"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "^org\\.hammerspoon\\.Hammerspoon$"
            ]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": "left_command"
            }
          },
          "to": [{
              "key_code": "f",
              "modifiers": [
                "left_option",
                "left_command"
              ]
            }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "^com\\.apple\\.ActivityMonitor$"
            ]
          }]
        }
      ]
    },
